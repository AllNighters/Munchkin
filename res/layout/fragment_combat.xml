<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/combatFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="45"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/battleMonster"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:padding="40dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/battleStats"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="55"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical" >

        <com.facebook.widget.ProfilePictureView
            android:id="@+id/battlePlayerPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            facebook:preset_size="large" />

        <TextView
            android:id="@+id/battlePlayer"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_weight="15"
            android:baselineAligned="false" />

        <LinearLayout
            android:id="@+id/battlelvls"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="40"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/monsterPower"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:baselineAligned="false" />

            <TextView
                android:id="@+id/playerPower"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:baselineAligned="false" />
        </LinearLayout>

        <Button
            android:id="@+id/runWinButton"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="20"
            android:baselineAligned="false" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/rotationTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageButton
                android:id="@+id/doorDeck"
                android:layout_width="10dip"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/door"
                android:baselineAligned="false" />

            <ImageButton
                android:id="@+id/doorDiscard"
                android:layout_width="10dip"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/blank_door"
                android:baselineAligned="false" />

            <ImageButton
                android:id="@+id/treasureDeck"
                android:layout_width="10dip"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/treasure"
                android:baselineAligned="false" />

            <ImageButton
                android:id="@+id/treasureDiscard"
                android:layout_width="10dip"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/blank_treasure"
                android:baselineAligned="false" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

</FrameLayout>